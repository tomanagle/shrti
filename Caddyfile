{
        on_demand_tls {
                ask http://localhost:5555
                interval 2m
                burst 5
        }
}

# (SecurityHeaders) {
#   header_up X-Real-IP {remote_host}
#   header_up X-Forwarded-Proto {scheme}
# }


https:// {
        tls {
                on_demand
        }
        
        reverse_proxy redirect:4000  {
            header_down Strict-Transport-Security max-age=31536000;
        }
}